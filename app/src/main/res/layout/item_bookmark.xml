<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="6dp"
    android:layout_marginHorizontal="4dp"
    card_view:cardBackgroundColor="@color/birumuda">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/bg_image_rounded"
            android:clipToOutline="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/kelas" />
        </FrameLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ruang F3.10"
                android:textSize="16sp"
                android:textColor="@color/putih"
                android:fontFamily="@font/josefinsans_bold"
                android:backgroundTint="@color/biru"
                android:padding="4dp"
                android:background="@drawable/bg_title_label"
                android:paddingHorizontal="12dp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Ruang: Ruang Kelas"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:fontFamily="@font/poppins_regular" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Catatan: Ruang Kelas PAM setiap hari selasa."
                android:textColor="@color/black"
                android:textSize="13sp"
                android:fontFamily="@font/poppins_regular" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
